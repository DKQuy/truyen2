<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
  <link rel="stylesheet" href="https://pingendo.com/assets/bootstrap/bootstrap-4.0.0-alpha.6.css" type="text/css"> </head>

<body>
  <div class="bg-inverse">
    <div class="container">
      <div class="row text-white">
        <div class="mx-auto py-5 col-md-7"> <i class="fa fa-book pull-left mx-auto px-5 fa-3x"></i>
          <h1 class="text-uppercase">Truyện Song Ngữ</h1>
        </div>
        <div class="col-md-12">
          <hr class=""> </div>
      </div>
      <div class="row mx-auto px-5">
        <div class="col-md-5 mx-auto bg-faded p-3">
          <hr class="">
          <%= form_for(@user) do |f| %>
            <div class="form-group"> <label class="">Email address</label> <%= f.email_field :email, :placeholder => "EMAIL" ,class: "form-control"%> </div>
            <div class="form-group"> <label class="">Password</label> <%= f.password_field :password, :placeholder => "MẬT KHẨU" ,class: "form-control"%> </div>
            <div class="form-group"><label>Tên</label><%= f.text_field :first_name, :placeholder => "TÊN" ,class: "form-control"%></div>
            <div class="form-group"><label>Họ</label><%= f.text_field :last_name, :placeholder => "HỌ" ,class: "form-control"%></div><%= f.submit "Đăng Ký", class: "btn btn-success btn-block" %><% end %>
          <hr class="">
          <p class="text-center">Đă có tài khoản ? <a href="<%= login_path %>" class="text-success">Đăng Nhập</a></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5 mx-auto">
          <hr class="">
          <p class="text-center text-gray-dark">FAM-Truyện Song Ngữ</p>
        </div>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"></script>
  <script src="https://pingendo.com/assets/bootstrap/bootstrap-4.0.0-alpha.6.min.js"></script>
</body>

</html>
