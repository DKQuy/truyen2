<body>
  <body>

    <div class="section">

      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <h1 class="text-left">
              <i class="fa fa-3x fa-fw fa-book"></i>
              <b>
                <i class="">Truyện Song Ngữ Anh-Việt</i>
              </b>
            </h1>
          </div>
          <div class="row">
            <div class="col-md-12">
              <hr>
            </div>
          </div>
        </div>
      </div>

      <div class="section">
        <div class="container">
          <div class="row">
            <div class="col-md-3"><b>Tên tiếng Việt</b></div>
            <div class="col-md-3"><b>Tên tiếng Anh</b></div>
            <div class="col-md-3"><b>Thể loại</b></div>
            <div class="col-md-3"><b>Thời gian cập nhật</b></div>
            <div class="row">
              <div class="col-md-12">
                <hr>
              </div>
            </div>
          </div>

        </div>
        <div class="section">
          <div class="container">
            <% @truyens.each do |t|%>
            <div class="row">
              <div class="col-md-3"><a href="<%=truyen_path(t)%>"><%= t.name_vn%></a></div>
              <div class="col-md-3"><a href="<%=truyen_path(t)%>"><%= t.name_en%></a></div>
              <div class="col-md-3"><%= t.theloai.title%></div>
              <div class="col-md-3"><%="#{time_ago_in_words(t.updated_at.in_time_zone(7))} ago"%></div>
            </div>
            <%end%>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <hr>
          </div>
          <p>FAM-Truyện Song Ngữ</p>
        </div>
      </div>

    </div>
    <hr>
    <p>FAM-Truyện Song Ngữ</p>
